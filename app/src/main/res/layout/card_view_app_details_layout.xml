<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5fbe92"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="#252145"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">

        <RelativeLayout
            android:id="@+id/relative_layout1"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="#324234"
            android:padding="16dp">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/app_icon"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/installed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_name"
                android:layout_toRightOf="@+id/app_icon" />

            <TextView
                android:id="@+id/total_data_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/installed_date"
                android:layout_toRightOf="@+id/app_icon"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/total_time_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_data_used"
                android:layout_toRightOf="@+id/app_icon"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/last_time_used"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/total_time_used"
                android:layout_toRightOf="@+id/app_icon" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        card_view:cardBackgroundColor="#252145"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp">

        <RelativeLayout

            android:id="@+id/relative_layout2"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#324234"
            android:padding="16dp">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/applogo" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>